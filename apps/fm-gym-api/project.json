{
  "name": "fm-gym-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/fm-gym-api/src",
  "targets": {
    "lock": {
      "executor": "@nxlv/python:lock",
      "options": {
        "update": false
      }
    },
    "sync": {
      "executor": "@nxlv/python:sync",
      "options": {}
    },
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "update": {
      "executor": "@nxlv/python:update",
      "options": {}
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "build": {
      "executor": "@nxlv/python:build",
      "outputs": [
        "{projectRoot}/dist"
      ],
      "options": {
        "outputPath": "{projectRoot}/dist",
        "publish": false,
        "lockedVersions": true,
        "bundleLocalDependencies": true
      },
      "cache": true
    },
    "lint": {
      "executor": "@nxlv/python:ruff-check",
      "outputs": [],
      "options": {
        "lintFilePatterns": [
          "src",
          "tests"
        ]
      },
      "cache": true
    },
    "format": {
      "executor": "@nxlv/python:ruff-format",
      "outputs": [],
      "options": {
        "filePatterns": [
          "mcp_server",
          "tests"
        ]
      },
      "cache": true
    },
    "test": {
      "executor": "@nxlv/python:run-commands",
      "outputs": [
        "{workspaceRoot}/reports/{projectRoot}/unittests",
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "command": "uv run pytest tests/",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "install": {
      "executor": "@nxlv/python:install",
      "options": {
        "silent": false,
        "args": "",
        "verbose": false,
        "debug": false
      }
    },
    "start": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "uv run src/main.py",
        "cwd": "{projectRoot}"
      }
    },
    "db:start": { 
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose up",
        "cwd": "{projectRoot}"
      },
      "continuous": true
    },
    "dev": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "uv run uvicorn main:app --host 0.0.0.0 --port 3200 --reload",
        "cwd": "{projectRoot}/src"
      },
      "continuous": true,
      "dependsOn": ["db:start"]
    },
    "dev-mcp": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "uv run uvicorn main:mcp_app --host 0.0.0.0 --port 3100 --reload",
        "cwd": "{projectRoot}/src"
      },
      "continuous": true,
      "dependsOn": ["db:start"]
    },
    "docker:build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -t fm-gym-api:latest .",
        "cwd": "{projectRoot}"
      }
    }
  },
  "tags": [],
  "release": {
    "version": {
      "generator": "@nxlv/python:release-version"
    }
  }
}
